<project name="WordPress Flowplayer" default="zip" basedir=".">

    <property name="zip-name" value="wordpress-flowplayer-0.1.1.zip"/>

    <target name="prepare">
        <mkdir dir="dist" />
    </target>

    <target name="zip" depends="prepare">
        <zip destfile="dist/${zip-name}" update="false">
            <zipfileset prefix="wordpress-flowplayer" dir=".">
                <include name="**/*"/>
                <exclude name="*.iml" />
                <exclude name="dist/*" />
                <exclude name="dist" />
            </zipfileset>
        </zip>
    </target>

</project>